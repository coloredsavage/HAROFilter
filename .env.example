# Supabase Configuration (Existing)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Google OAuth 2.0 Configuration
# Get these from Google Cloud Console (https://console.cloud.google.com)
# 1. Create a new project
# 2. Enable Gmail API
# 3. Create OAuth 2.0 credentials (Web application type)
# 4. Add authorized redirect URI: http://localhost:3000/api/gmail/auth
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URL=http://localhost:3000/api/gmail/auth

# Gmail OAuth Refresh Token
# Get this by running: npm run gmail-auth
# This token allows the app to access Gmail without repeated logins
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token_here

# Gmail SMTP Configuration
# For sending notification emails via Gmail
GMAIL_USER=your_gmail@gmail.com
# Generate an App Password at: https://myaccount.google.com/apppasswords
# (Requires 2-Factor Authentication to be enabled)
GMAIL_APP_PASSWORD=your_gmail_app_password_here

# Vercel Cron Security
# Generate a random secret for securing cron job endpoints
# You can use: openssl rand -base64 32
CRON_SECRET=your_random_cron_secret_here

# Application URL
# Used for generating links in emails
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Stripe Configuration (Optional - only needed for managed hosting with paid plans)
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
# Get webhook secret after creating webhook endpoint in Stripe Dashboard
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
# Stripe Price ID for your product (get from Stripe Dashboard -> Products)
STRIPE_PRICE_ID=price_your_stripe_price_id_here

# Supabase Service Role Key (Optional - only needed for Stripe webhooks)
# Get from: https://supabase.com/dashboard/project/_/settings/api
# WARNING: This bypasses Row Level Security - only use in server-side code
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
